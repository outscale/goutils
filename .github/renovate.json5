{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "minimumReleaseAge": "3 days",
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchFileNames": [
        "**/*"
      ],
      "semanticCommitType": "⬆️ deps",
      "semanticCommitScope": "{{manager}}"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "dependencies",
        "skip-changelog"
      ]
    }
  ]
}